<section id="<%= dom_id(list) %>" class='list'>
    <h4><%= list.name %></h4>            
  <div class='clear'></div>
    <table>
      <thead>
        <tr>
          <th><input type="checkbox" value="" id="<%= dom_id(list) %>_select_all" class='list_select_all' checked ></th>
          <th>Item</th>
          <th>Cost</th>
          <th>Sale</th>
          <th>Profit</th>
        </tr>
      </thead>
      <tbody>
        
      
        <%= render :partial => 'item', :collection => list.profitable_items %>
         
        <tr>
          <td colspan=5>
            <%= form_for Item.new(:list_id => list.id), :url => profession_list_items_url(@profession, list) do |f| %>
              <%= f.text_field :url , :class => "blue" , :size => 120, :placeholder => "Enter a GW2Spidy.com URL to a recipe you want to add to this list"%>
              <%= f.submit "Add Item", :class => 'button green' %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
</section>  <!-- end list -->
